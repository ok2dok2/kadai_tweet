<%= form_with(model: @post, local: true, url: new_or_edit ) do |form| %>

    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
  
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <h2>つぶやきを入力してください</h2>
  
      <div class="blog_title">
      <%= form.label :つぶやき%>
      <%= form.text_field :content %>
      </div>
  
      <%= form.submit "つぶやく" %>

      <% end %>